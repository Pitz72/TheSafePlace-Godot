[application]

config/name="THE SAFE PLACE CHRONICLES: The Echo of the Journey v0.9.7.3 Manager Consolidation"
config/description="Computer Boot System - Sistema di boot computer completo con menu principale rivoluzionato, shader CRT ultra-realistici e navigazione keyboard-only per accessibilità totale"
run/main_scene="res://scenes/BootBlack.tscn"
config/features=PackedStringArray("4.4", "Forward Plus")

[autoload]

